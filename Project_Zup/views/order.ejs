<head>
<meta charset="UTF-8">
<link rel="stylesheet"
  href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script
  src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script
  src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<style type="text/css">
.logo {
	width: 10%;
	height: 10%;
}

.inner {
	white-space: nowrap;
}

img {
	text-align: left;
}

.btn-glyphicon {
	padding: 8px;
	background: #ffffff;
	margin-right: 4px;
}

.icon-btn {
	padding: 1px 15px 3px 2px;
	border-radius: 50px;
}

.panel {
	text-align: center;
	/* background-color: green; */
	margin-bottom: 50px;
}

table {
	margin-bottom: 50px;
}

.canceltext {
	width: 90%;
}
</style>
<title>ZUP_관리자페이지</title>
</head>
<body>
 <% include header.ejs %>

  </div>
  <div class="container" style="text-align: center; margin-bottom: 50px">
  <a class="btn icon-btn btn-success" href="order"><span class="glyphicon btn-glyphicon glyphicon-plus img-circle text-success"></span>접수관리</a>
  <a class="btn icon-btn btn-info" href="orderresult"><span class="glyphicon btn-glyphicon glyphicon-share img-circle text-info"></span>회수관리</a>
  <a class="btn icon-btn btn-warning" href="user"><span class="glyphicon btn-glyphicon glyphicon-minus img-circle text-warning"></span>회원관리</a>
  <a class="btn icon-btn btn-danger" href="total"><span class="glyphicon btn-glyphicon glyphicon-trash img-circle text-danger"></span>회수현황</a>
  </div>
  <div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>NO.</th>
          <th>고객이름</th>
          <th>고객전화번호</th>
          <th>고객주소</th>
          <th>줍맨이름</th>
          <th>줍맨전화번호</th>
          <th>접수시간</th>
          <th>접수상태</th>
          <th>취소사유</th>
          <th>취소하기</th>
        </tr>
      </thead>
      <tbody>
       	<% data.forEach(function(item, index){%>
        <tr>
          <td><%= item.order_num%></td>
          <td><%= item.user_name%></td>
          <td><%= item.user_phonenum%></td>
          <td><%= item.user_address%></td>
          <td><%= item.employee_name%></td>
          <td><%= item.employee_phonenum%></td>
          <td><%= moment(item.orderdate).format('YYYY-MM-DD hh:mm:ss')%></td>
          <td><%= item.order_status%></td>
          <td><%= item.cancelreason%></td>
          <td><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal<%= index%>">취소하기</button></td>
          <!-- Modal -->
          <div class="modal fade" id="myModal<%= index%>" role="dialog">
            <div class="modal-dialog">
            
              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title"><%=item.user_name %>님의 접수를 취소하시려면 취소사유를
                    입력하고 취소버튼을 눌러주세요.</h4>
                </div>
                <form method="post">
                <div class="modal-body">
                  <input type="text" placeholder="취소사유를 입력해주세요." name="cancelreason"class="canceltext">
                  <input type="hidden" name="order_num" value="<%=item.order_num%>"> 
                  <button type="submit" class="btn btn-danger">취소</button>
                </div>
                </form>
                
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        </tr>
        <% });%>
        
     <tr style="margin: 0 auto">
          <td colspan="12" style="text-align: center;">
          <% if (searchType ==""){%>
          <% if (pageCount > 1) { %>  
			<ul class="pagination">  
			  <% if (currentPage > 1) { %>
			      <li><a href="/order?page=1">&laquo;</a></li>
			  <% } %>
			  <% var i = 1;
			  if (currentPage > 5) {
			  i = +currentPage - 4;
			  } %>
			  <% if (i !== 1) { %>
			      <li class="disabled"><a href="#">...</a></li>
			  <% } %>
			  <% for (i; i<=pageCount; i++) { %>
			    <% if (currentPage == i) { %>
			        <li class="active"><span><%= i %> <span class="sr-only">(current)</span></span></li>
			    <% } else { %>
			        <li><a href="/order?page=<%= i %>"><%= i %></a></li>
			    <% } %>
			    <% if (i == (+currentPage + 4)) { %>
			        <li class="disabled"><a href="#">...</a></li>
			    <% break; } %>
			  <% } %>
			  <% if (currentPage != pageCount) { %>
			      <li><a href="/order?page=<%= pageCount %>">&raquo;</a></li>
			  <% } %>
			</ul>  
			<% } %>  
          <%}%>
           <% if (searchType !=""){
           %>
         	<% if (pageCount > 1) { %>  
			<ul class="pagination">  
			  <% if (currentPage > 1) { %>
			      <li><a href="/order?page=1&searchType=<%=searchType%>&value=<%=searchValue%>">&laquo;</a></li>
			  <% } %>
			  <% var i = 1;
			  if (currentPage > 5) {
			  i = +currentPage - 4;
			  } %>
			  <% if (i !== 1) { %>
			      <li class="disabled"><a href="#">...</a></li>
			  <% } %>
			  <% for (i; i<=pageCount; i++) { %>
			    <% if (currentPage == i) { %>
			        <li class="active"><span><%= i %> <span class="sr-only">(current)</span></span></li>
			    <% } else { %>
			        <li><a href="/order?page=<%= i %>&searchType=<%=searchType%>&value=<%=searchValue%>"><%= i %></a></li>
			    <% } %>
			    <% if (i == (+currentPage + 4)) { %>
			        <li class="disabled"><a href="#">...</a></li>
			    <% break; } %>
			  <% } %>
			  <% if (currentPage != pageCount) { %>
			      <li><a href="/order?page=<%= pageCount %>&searchType=<%=searchType%>&value=<%=searchValue%>">&raquo;</a></li>
			  <% } %>
			</ul>  
			<% } %>  
			<%}%>
          </td>
        </tr>
      </tbody>
    </table>
    <form name="search" class="form-inline" role="form" style="float: left;">
      <div class="form-group">
        <select class="form-control" id="type" name="searchType">
          <option value="on">접수번호</option>
          <option value="un">고객이름</option>
          <option value="up">고객전화번호</option>
        </select> 
        <input type="text" class="form-control" id="value" name="value" value="<%=searchValue%>" required>
      </div>
      <button type="submit" id="searchBtn" class="btn btn-primary">검색</button>
    </form>
  </div>
  <% include footer.ejs %>
</body>
