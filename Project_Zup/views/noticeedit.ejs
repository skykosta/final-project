<h1>공지사항 수정</h1>

<br>
<br>
<br>


	<section class="contact-page">
		<div class="container">
			<div class="text-center">
				<h2>공지사항 수정</h2>
			</div>
			<div class="row contact-wrap">
				<div class="col-md-6 col-md-offset-3">
					
					<% data.forEach(function(item, index){%>
						<div class="form-group">
							<input type="text" class="form-control" name="subject"
								id="subject" value="<%=item.article_writer%>" data-rule="minlen:4"
								data-msg="Please enter at least 8 chars of subject" />
							<div class="validation"></div>
						</div>
						<div class="form-group">
							<input type="text" class="form-control" name="subject"
								id="subject" value="<%=item.article_title%>" data-rule="minlen:4"
								data-msg="Please enter at least 8 chars of subject" />
							<div class="validation"></div>
						</div>
						<div class="form-group">
							<textarea rows="20" type="text" class="form-control" name="message" height="10"
								data-rule="required" data-msg="Please write something for us"
								 style='resize: none'><%=item.article_content%></textarea>
							<div class="validation"></div>
						</div>
				
						<div class="text-center">
							<button type="submit" name="submit" class="btn btn-primary btn-lg">수정완료</button>
							<button type="cancel" class="btn btn-primary btn-lg" onclick="location.href='notice1'">취소</button>
						</div>
						<%})%>

				</div>
			</div>
			

			<!--/.row-->
		</div>
		<!--/.container-->
	</section>
	<!--/#contact-page-->


</body>
