<!-- 비밀번호 변경 유효성 검사 -->
<script type="text/javascript">
 function newPwSubmit(form){
	
	if($("#newPassword").val() === ""){
		swal({
				  title : '새 비밀번호 미입력!',
				  text : '새 비밀번호를 입력해주세요!',
				  type :'warning',
				  confirmButtontext : '닫기'
		})
		$("#newPassword").focus();
		return false;
	}
	
	if($("#newPasswordCheck").val() === ""){
		swal({
				  title : '새 비밀번호 확인 미입력!',
				  text : '새 비밀번호를 한번 더 입력해주세요!',
				  type :'warning',
				  confirmButtontext : '닫기'
		})
		$("#newPasswordCheck").focus();
		return false;
	}
	
 }
 
//실시간 이벤트 처리
	var pw = document.getElementById("newPassword");
	var pwCheck = document.getElementById("newPasswordCheck");
	

	// 키보드 이벤트
	
	pw.onkeyup = function() {
		valid_passwd(pw);
	}
	pwCheck.onkeyup = function() {
		valid_passwdCheck(pw, pwCheck);
	}
	

	// 비밀번호 유효성 검사
	function valid_passwd(pw) {

		//    비밀번호 정규표현식(알파벳과 숫자 각각 최소 1개 이상으로 구성, 6~12자리)
		re = /^(?=([a-zA-Z]+[0-9]+[a-zA-Z0-9]*|[0-9]+[a-zA-Z]+[a-zA-Z0-9]*)$).{6,12}$/i;

		if (!re.test(pw.value)) {
			$("#passwd_display").html("비밀번호를 다시 입력해주세요.");
			return false;
		} else {
			$("#passwd_display").html("사용가능한 비밀번호입니다.");
			return true;
		}
	}

	// 비밀번호가 동일한지 검사
	function valid_passwdCheck(pw, pwCheck) {

		if (pw.value != pwCheck.value) {
			$("#passwdCheck_display").html("Password가 서로 다릅니다.");
			return false;
		} else if(pw.value == pwCheck.value){
			$("#passwdCheck_display").html("Password가 동일합니다..");
			return  true;
		}
	}
 

</script>

